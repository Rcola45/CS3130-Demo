<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acme.csci3130.MainActivity">

    <TextView
        android:id="@+id/displayText_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitText_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="changeLabel"
        android:text="@string/submitButton_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        app:layout_constraintLeft_toRightOf="@+id/inputText_textbox" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/darker_gray"
        android:onClick="resetText"
        android:text="@string/resetButton_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/submitText_button"
        app:layout_constraintRight_toRightOf="@+id/submitText_button"
        app:layout_constraintTop_toBottomOf="@+id/submitText_button" />

    <EditText
        android:id="@+id/inputText_textbox"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintRight_toLeftOf="@+id/submitText_button"
        app:layout_constraintTop_toTopOf="@+id/submitText_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/darker_gray"
        android:onClick="shareClick"
        android:text="@string/shareButton_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/reset_button"
        app:layout_constraintRight_toRightOf="@+id/reset_button" />

</android.support.constraint.ConstraintLayout>
